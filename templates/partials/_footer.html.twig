            </div>
          </div>
        {% endfor %}

        {% for reservation in abouts %}
          <div class="col-lg-3 col-md-6 footer-links d-flex">
            <i class="bi bi-telephone icon"></i>
            <div>
              <h4>Reservations</h4>
              <p>
                <strong>Phone:</strong> {{ '+243 ' ~  reservation.contact }}<br>
                <strong>Email:</strong> {{ reservation.email }}<br>
              </p>
            </div>
          </div>    
